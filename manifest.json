{
  "manifest_version": 3,
  "name": "2Vault",
  "version": "0.0.1",
  "description": "AI-powered bookmark digester for Obsidian",
  "permissions": ["bookmarks", "activeTab", "storage", "scripting", "notifications"],
  "host_permissions": [
    "https://x.com/*",
    "https://twitter.com/*",
    "https://www.linkedin.com/*",
    "http://localhost:*",
    "https://localhost:*",
    "https://openrouter.ai/*"
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "background": {
    "service_worker": "src/background/service-worker.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://x.com/*", "https://twitter.com/*"],
      "js": ["src/content-scripts/twitter-extractor.ts"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["src/content-scripts/linkedin-extractor.ts"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "capture-current-page": {
      "suggested_key": { "default": "Ctrl+Shift+V", "mac": "Command+Shift+V" },
      "description": "Capture current page to 2Vault"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
